<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!-- Form: Invoice Customer -->
    <record id="account_move_form_stamp" model="ir.ui.view">
        <field name="name">account.move.form.stamp</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='invoice_line_ids']//field[@name='tax_ids']" position="attributes">
                <attribute name="domain">[('name', 'not like', 'Timbre fiscal')]
                </attribute>
            </xpath>

            <xpath
                    expr="//field[@name='invoice_line_ids']/list/field[@name='sequence']"
                    position="after"
            >
            </xpath>

            <xpath expr="//group[@id='header_right_group']" position="inside">
                <field name="auto_compute_stamp" invisible="1"/>
                <field name="tax_stamp" string="Timbre fiscal" invisible="1"/>

            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']" position="after">

                <button name="action_onchange_tax_stamp" string="Ajouter Timbre fiscal" type="object"
                        invisible="auto_compute_stamp == True or state not in 'draft'"/>

            </xpath>
            <xpath
                    expr="//form/sheet/notebook/page[@id='invoice_tab']/field/form/sheet/group/field[@name='product_id']"
                    position="after"
            >
            </xpath>
        </field>
    </record>

</odoo>
