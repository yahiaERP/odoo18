<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record model="ir.ui.view" id="view_account_config_settings_stamp">
        <field name="name">view_account_config_settings_stamp</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <block name="default_taxes_setting_container" position="inside">
                <setting id="setting_stamp_tax" title="Configuration for Tax stamp">
                    <field name="use_stamp" class="o_form_label"/>
                    <span class="o_form_label">Configuration for Timbre fiscale
                    </span>
                    <span
                            class="fa fa-lg fa-building-o"
                            title="Values set here are company-specific."
                            aria-label="Values set here are company-specific."
                            groups="base.group_multi_company"
                            role="img"
                    />
                    <div class="text-muted">
                        Ajouter le timbre fiscal automatiquement
                    </div>
                                        <field name="auto_compute"/>
                    <label
                            string="Automatique"
                            for="auto_compute"
                            class="col-lg-3 o_light_label"
                    />

                </setting>
            </block>
        </field>
    </record>

</odoo>
